<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/tap_icon_2"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp"
        />
    <TextView
        android:id="@+id/tv_profile_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="@string/profile_detail"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:id="@+id/image_button_android_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/android_profile"
            android:backgroundTint="@color/colorTextIcon"
            android:layout_margin="4dp"/>
        <ImageButton
            android:id="@+id/image_button_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mail"
            android:backgroundTint="@color/colorTextIcon"
            android:layout_margin="4dp"/>
        <ImageButton
            android:id="@+id/image_button_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/linkedin"
            android:backgroundTint="@color/colorTextIcon"
            android:layout_margin="4dp"/>


    </LinearLayout>

</LinearLayout>